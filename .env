# Labanita Egyptian Sweets Store - Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost/labanita"

# Application Configuration
APP_NAME="Labanita API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT="development"

# Security Configuration
SECRET_KEY="your-super-secret-key-here-change-in-production-very-long-and-random"
JWT_SECRET_KEY="your-jwt-secret-key-here-change-in-production-very-long-and-random"

# JWT Configuration
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Configuration
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL="redis://localhost:6379/0"

# External Services Configuration (Optional)
# Twilio for SMS OTP
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"